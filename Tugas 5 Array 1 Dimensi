#include <iostream>

using namespace std;

int main()
{
    int jerukperas[5];
    int hasil=0;
    for(int i=0; i<5; i++)
        {
            cout << "Input gelas ke-" << (i + 1 ) << ":";
            cin >> jerukperas[i];
        }
     cout << "Nilai jeruk peras yang Anda masukkan ..." << endl;
     for(int i=0; i<5; i++)
        {
            hasil+= jerukperas[i];
            cout << "\nGelas ke-" << (i + 1) << " adalah " << jerukperas[i] << " Liter";
        }
     cout << "\nTotal Jeruk peras setiap Gelas ..." << endl << endl;
     cout << hasil << " Liter";
    return 0;
}
